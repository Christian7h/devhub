---
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="DevHub">
	<main class="bg-lime">
		<div class="flex justify-center items-center mt-4">
			<h1 id="typewriter" class="text-4xl font-bold"></h1>
		</div>
		
		<Hero/>
	
		
</Layout>

<script is:inline>
	const words = ["Bocchi The Goat!", "Welcome to my website!", "This is a typewriter effect."];
	let i = 0;
	let j = 0;
	let currentWord = "";
	let isDeleting = false;
	
	function type() {
	  currentWord = words[i];
	  if (isDeleting) {
		document.getElementById("typewriter").textContent = currentWord.substring(0, j-1);
		j--;
		if (j == 0) {
		  isDeleting = false;
		  i++;
		  if (i == words.length) {
			i = 0;
		  }
		}
	  } else {
		document.getElementById("typewriter").textContent = currentWord.substring(0, j+1);
		j++;
		if (j == currentWord.length) {
		  isDeleting = true;
		}
	  }
	  setTimeout(type, 100);
	}
	
	type();
	</script>